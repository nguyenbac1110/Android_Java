<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnbai1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài 1.1"
                android:backgroundTint="#FF9800"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnbai1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài 1.2"
                android:backgroundTint="#FF9800"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnbai1_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài 1.3"
                android:backgroundTint="#FF9800"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnbai2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài 2.1"
                android:backgroundTint="#FF9800"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnbai2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài 2.2"
                android:backgroundTint="#FF9800"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnbai2_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài 2.3"
                android:backgroundTint="#FF9800"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnbai3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài 3.1"
                android:backgroundTint="#FF9800"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnbai3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài 3.2"
                android:backgroundTint="#FF9800"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnbai4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài 4"
                android:backgroundTint="#FF9800"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnbaiqlsv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QLSV"
                android:backgroundTint="#FF9800"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnjson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Json"
                android:backgroundTint="#FF9800"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnsv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SV"
                android:backgroundTint="#FF9800"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnNav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nav"
                android:backgroundTint="#FF9800"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bottom"
                android:backgroundTint="#FF9800"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

        </LinearLayout>

    </ScrollView>

